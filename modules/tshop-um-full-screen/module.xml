<?xml version="1.0" encoding="GBK"?>
<module>
    <id>tshop-um-full-screen</id>
    <name>全屏广告滚动</name>
    <file>tshop-um-full-screen.php</file>
    <thumbnail>../../assets/images/full_screen.png</thumbnail>
    <description></description>
    <requiredCache>true</requiredCache>
    <supportedWidth>950</supportedWidth>
    <themes default="时尚女装女鞋百搭模版">
        <theme name="时尚女装女鞋百搭模版">
            <css>assets/stylesheets/default.css</css>
        </theme>
    </themes>
    <parameters>
        <group title="添加你的图片">
            <section title="图片高度设置" folded="false">
                <param description="请输入大小为600以内,默认为560" formType="text" label="图片显示高度" name="img_height" ptype="text">560</param>
                <param description="请选择动画类型" formType="range" label="动画设置" name="effect" ptype="text">
                    <option value="fade">渐影渐显</option>
                   <option value="scrollx" selected="selected">左右滚动</option>
                   <option value="none">无切换效果</option>
                </param>
            </section>
            <section title="图片一" folded="false">
                <param description="请输入大小为950的图片" formType="text" label="图片1地址" name="img1" ptype="url">http://img01.taobaocdn.com/imgextra/i1/46353909/T256PNXgxXXXXXXXXX_!!46353909.png</param>
                <param description="请输入跳转地址" formType="text" label="图片1跳转地址" name="img1_href" ptype="url">http://img01.taobaocdn.com/imgextra/i1/46353909/T256PNXgxXXXXXXXXX_!!46353909.png</param>
                <param description="比如：热门衣物登场" formType="text" label="图片描述" name="img1_text" ptype="text">热门衣物登场1</param>
                <param description="当背景不够大时可用背景色填充，可选。" formType="text" label="填入背景色" name="img1_color" ptype="text"/>
            </section>
            <section title="图片二" folded="false">
                <param description="请输入大小为950的图片" formType="text" label="图片2地址" name="img2" ptype="url">http://img01.taobaocdn.com/imgextra/i1/46353909/T2l9znXnBaXXXXXXXX_!!46353909.png</param>
                <param description="请输入跳转地址" formType="text" label="图片2跳转地址" name="img2_href" ptype="url">http://img01.taobaocdn.com/imgextra/i1/46353909/T2l9znXnBaXXXXXXXX_!!46353909.png</param>
